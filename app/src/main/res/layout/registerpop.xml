<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="270dp"
    android:layout_height="365dp"
    android:background="@color/gray"
    android:padding="5dp"
    android:layout_gravity="center">


    <TextView
        android:layout_width="30dp"
        android:id="@+id/closedialog"
        android:layout_height="30dp"
        android:textColor="@color/colorWhite"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end|top"
        android:background="@drawable/circlebackgroundyellow"
        android:gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

            <EditText
            android:layout_width="match_parent"
            android:id="@+id/usernameText"
            android:layout_height="50dp"
            android:gravity="fill"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:drawableEnd="@drawable/ic_perm_identity_black_24dp"
            android:paddingRight="10dp"
            android:background="@drawable/editshape"
            android:hint="Username"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/emailText"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="fill"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:drawableEnd="@drawable/ic_mail_outline_black_24dp"
            android:paddingRight="10dp"
            android:background="@drawable/editshape"
            android:hint="Email"/>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/passwordText"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="fill"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:drawableEnd="@drawable/ic_lock_outline_black_24dp"
            android:paddingRight="10dp"
            android:background="@drawable/editshape"
            android:hint="Password"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:layout_gravity="center"
            android:text="Register"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="35dp"
            android:background="@drawable/buttonpoststyle"/>

    </LinearLayout>

</LinearLayout>